<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_chat_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/avatar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/fragment_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fragment_chat_image"
        android:layout_toEndOf="@+id/fragment_chat_image"
        android:text="Display name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/fragment_chat_image" />

    <TextView
        android:id="@+id/fragment_chat_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_chat_name"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/fragment_chat_image"
        android:text="last message"
        android:maxLines="1"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/fragment_chat_image" />
    <TextView
        android:id="@+id/fragment_chat_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:text="Last seen"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/img_last_seen"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/fragment_chat_last_seen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/avatar" />
</RelativeLayout>